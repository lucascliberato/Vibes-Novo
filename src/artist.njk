---
pagination:
  data: artists
  size: 1
  alias: artistName
permalink: "/artist/{{ artistName | slugify }}/index.html"
layout: layout.njk
title: "All Songs by {{ artistName }}"
---

<div class="song-display" style="text-align: left; padding: 2rem 3rem;">
    <h1 style="font-size: 2.5rem; margin-bottom: 2rem;">All songs by {{ artistName }}</h1>
    <ul style="list-style: none; padding: 0;">
        {%- for song in songs.allSongs -%}
            {%- if song.artist == artistName -%}
                <li style="margin-bottom: 1.5rem;">
                    <a href="/song/{{ song.artist | slugify }}/{{ song.song | slugify }}/" style="font-size: 1.25rem; text-decoration: none; color: var(--text-primary);">
                        {{ song.song }}
                    </a>
                    <p style="font-style: italic; color: var(--text-secondary); margin-top: 0.25rem;">"{{ song.context }}"</p>
                </li>
            {%- endif -%}
        {%- endfor -%}
    </ul>
    <p style="margin-top: 3rem;">
        <a href="/" style="color: var(--text-secondary); text-decoration: none; font-weight: 500;">‚Üê Back to Home</a>
    </p>
</div>